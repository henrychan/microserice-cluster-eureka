                    </resources>
                </configuration>
            </plugin>-->

            <!-- this is for k8s  push to Docker -->
            <plugin>
                <groupId>com.spotify</groupId>
                <artifactId>docker-maven-plugin</artifactId>
                <version>1.1.1</version>
                <configuration>
                    <imageName>itmuch/${project.artifactId}:${project.version}</imageName>
                    <baseImage>java</baseImage>
                    <forceTags>true</forceTags>
                    <runs>
                        <run>mv ${project.build.finalName}.jar eureka.jar</run>
                        <run>chmod +x /init.sh</run>
                        <run>ls -al /</run>
                    </runs>
                    <cmd>/init.sh</cmd>
                    <resources>
                        <resource>
                            <targetPath>/</targetPath>
                            <directory>${project.build.directory}</directory>
                            <include>${project.build.finalName}.jar</include>
                        </resource>
                        <resource>
                            <targetPath>/</targetPath>
                            <directory>${project.basedir}/src/docker</directory>
                            <include>init.sh</include>
                        </resource>
                    </resources>
                </configuration>
            </plugin>
        </plugins>
    </build>
</project>

